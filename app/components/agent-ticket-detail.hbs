<div class="agent-container">
  <h2>{{@ticket.subject}}</h2>
  <p>Status: {{@ticket.status}}</p>
  <p>Description: {{@ticket.description}}</p>

  {{#each @ticket.attachments as |url|}}
    <p><a href={{url}} target="_blank">View Attachment</a></p>
  {{/each}}

  {{#each @ticket.comments as |comment|}}
    <div>
      <strong>{{comment.user.name}}</strong>: {{comment.body}}
    </div>
  {{/each}}

  <div class="agent-comment-box">
    <textarea placeholder="Write a comment..." {{on "input" this.updateComment}}>{{this.commentText}}</textarea>
    <button class="agent-button" {{on "click" this.submitComment}}>Post Comment</button>
  </div>
</div>
