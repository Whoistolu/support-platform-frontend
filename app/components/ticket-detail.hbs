<div class="max-w-4xl mx-auto p-4 space-y-4">
  <div class="card bg-white p-4 rounded-lg shadow">
    <h2 class="text-xl font-semibold text-blue-700 mb-2">{{this.model.subject}}</h2>
    <p class="text-gray-600 mb-2">{{this.model.description}}</p>

    <div class="text-sm text-gray-500 mb-4">
      <span class="font-semibold">Status:</span>
      <span
        class="inline-block ml-1 px-2 py-1 rounded-full
               {{if (eq this.model.status 'open') 'bg-green-100 text-green-800'
                 (if (eq this.model.status 'pending') 'bg-yellow-100 text-yellow-800'
                   'bg-red-100 text-red-700')}}"
      >
        {{this.model.status}}
      </span>
    </div>

    {{#if this.model.attachmentUrls.length}}
      <div class="mb-4">
        <h3 class="text-sm font-semibold mb-2">Attachments:</h3>
        <ul class="list-disc list-inside text-blue-600">
          {{#each this.model.attachmentUrls as |url|}}
            <li><a href={{url}} target="_blank" rel="noopener noreferrer">{{url}}</a></li>
          {{/each}}
        </ul>
      </div>
    {{/if}}
  </div>

  <CommentSection @ticketId={{this.model.id}} @comments={{this.model.comments}} />
</div>
