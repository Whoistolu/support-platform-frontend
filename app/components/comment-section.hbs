{{#if this.canComment}}
  <form {{on "submit" this.postComment}}>
    <label for="comment-body">Your Comment</label>
    <textarea
      id="comment-body"
      placeholder="comment..."
      {{on "input" this.updateComment}}
    >
      {{this.commentText}}
    </textarea>
    <button type="submit">Post Comment</button>
  </form>
{{else}}
  <p>You can only comment after an agent has responded.</p>
{{/if}}